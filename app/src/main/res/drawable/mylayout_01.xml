<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>

            <item android:top="5dp" android:left="0dp">
                <shape>
                    <gradient android:angle="270"
                              android:endColor="#686868"
                              android:startColor="#a1a1a1" />
                    <stroke android:width="1dp" android:color="#a1a1a1" />
                    <corners android:radius="10dp" />
                    <padding android:bottom="4dp" android:left="0dp"
                             android:right="0dp" android:top="2dp" />
                </shape>
            </item>

            <item android:right="0dp" android:top="0dp">
                <shape>
                    <corners android:radius="10dp" />
                    <solid android:color="#ffffff" />
                </shape>
            </item>



        </layer-list>
    </item>

</selector>